                    , Run Date          "%a %b %_d %k:%M"
                                        "date"
                                        10
                    , Run DynNetwork    [ "-t", "<fn=1><fc=#8ec07c>\xf6d9</fc></fn> <rx> <fn=1><fc=#d3869b>\xfa51</fc></fn> <tx>"
                                        , "-H", "200"
